  autocmd BufWinEnter                 *.txt           if &ft == 'help' | wincmd L | endif
" }}

" Jump to Last Known Position {{
  autocmd BufWinEnter                 *
    \ if line("'\"") > 1 && line("'\"") <= line("$") |
    \   execute "normal! g`\"" |
    \   execute "normal! zz" |
    \   execute "normal! zv" |
    \ endif
" }}

