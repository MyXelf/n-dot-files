[push]
    default = matching

[core]
    editor = vim

[color]
    ui = true

[merge]
    tool = vimdiff

[alias]
    last = log -1 HEAD
    a = add
    am = commit --amend
    fe = fetch --all --prune
    rb = rebase
    ph = push
    pl = pull
    cp = cherry-pick
    co = checkout
    cl = clone
    ci = commit
    st = status -sb
    br = branch
    unstage = reset HEAD --
    dc = diff --cached
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all

[user]
    name = Nelson R Monserrate
    email = nrmonserrate@gmail.com
